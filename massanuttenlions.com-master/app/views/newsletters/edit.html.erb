<% provide :page_title, "Edit Newsletter: #{@newsletter.period.strftime('%B %Y')}" %>
<ul class="nav nav-pills">
  <li>
    <%= link_to({:controller => 'access', :action => 'menu'}, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Admin Home
    <% end %>
  </li>
  <li>
    <%= link_to(root_path, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Site Home
    <% end %>
  </li>
  <li>
    <%= link_to({:controller => 'newsletters', :action => 'list'}, :class => "btn-primary") do %>
        <i class="icon-th-list icon-white"></i> Newsletters List
    <% end %>
  </li>
</ul>
<%= simple_form_for(@newsletter, :url => {:action => 'update', :id => @newsletter.id}, :html => {:multipart => true, :class => "form-horizontal"}) do |f| %>
    <%= f.error_notification %>

    <fieldset>
      <legend>
        <%= "Edit Newsletter #{@newsletter.period.strftime('%B %Y')}".upcase %>
      </legend>
      <div class="form-inputs">
        <%= render(:partial => "form", :locals => {:f => f}) %>
        <table>
          <tr>
            <td> <%= f.input :header, :as => :ckeditor, :label => 'Header', :input_html => {:toolbar => 'Full', :width => '100%', :height => '300px'} %></td>
            <td><%= f.input :footer, :as => :ckeditor, :label => 'Footer', :input_html => {:toolbar => 'Full', :width => '100%', :height => '300px'} %></td>
          </tr>
        </table>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Update Newsletter", :class => "btn btn-large" %>
        <%= link_to({:controller => 'newsletters', :action => 'list'}, :class => 'btn btn-large') do %>
            Cancel
        <% end %>
      </div>
    </fieldset>

<% end %>

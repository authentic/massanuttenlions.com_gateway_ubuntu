<% provide(:page_title, 'Admin Home Page') %>
<div class="page-header">
  <h3>Admin Area</h3>
</div>
<div class="well">
  <div class="row-fluid">
    <div class="span12">
      <ul class="thumbnails ">
        <li class="span3">
          <%= link_to(subjects_path, :class => 'thumbnail') do %>
              <h3> Site Information</h3>

              <p>
                <small>Add and edit Subjects, Pages and Sections.</small>
              </p>
          <% end %>
        </li>
        <li class="span3">
          <a href="/newsletters/list" class="thumbnail home-link">
            <h3>Newsletters</h3>

            <p>
              <small> Add and edit Newsletters.</small>
            </p>
          </a>
        </li>
        <li class="span3">
          <a href="/admin/list" class="thumbnail home-link ">
            <h3>Manage Users</h3>

            <p>
              <small>Add and edit members of the club.</small>
            </p>
          </a>
        </li>
        <li class="span3">
          <a href="/club/list" class="thumbnail home-link ">
            <h3>Club Information</h3>

            <p>
              <small> Edit Club Information.</small>
            </p>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <ul class="thumbnails ">
        <li class="span3">
          <a href="https://www.google.com/calendar/render?tab=cc" class="thumbnail home-link " target="_blank">
            <h3>Google Calendar Events</h3>

            <p>
              <small>Add and edit Google Calendar Events.</small>
            </p>
          </a>
        </li>
        <li class="span3">
          <a href="https://www.google.com/analytics/web/?pli=1#report/visitors-overview/a37969295w66499438p68388034/" target="_blank" class="thumbnail home-link">
            <h3>Google Analytics</h3>

            <p>
              <small> Statistics about the visitors to a website.</small>
            </p>
          </a>
        </li>
        <li class="span6">
          <a href=" https://code.google.com/apis/console" target="_blank" class="thumbnail home-link">
            <h3>Google APIs Console</h3>

            <p>
              <small> Web interface for managing and viewing traffic data, authentication, and billing information for the Google APIs.</small>
            </p>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>












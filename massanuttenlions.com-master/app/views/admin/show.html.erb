<% provide :page_title, "Show User Information: #{@user.user_name}" %>
<ul class="nav nav-pills">
  <li>
    <%= link_to({:controller => 'access', :action => 'menu'}, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Admin Home
    <% end %>
  </li>

  <li>
    <%= link_to({:action => 'list'}, :class => "btn-primary") do %>
        <i class="icon-th-list icon-white"></i> Users List
    <% end %>
  </li>
  <li>
    <%= link_to(root_path, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Site Home
    <% end %>
  </li>
</ul>
<div>
  <h2><%= "User Detail View".upcase %> - "<%= @user.user_name.upcase %>"</h2>
  <table class="table table-striped table-bordered table-condensed" summary="User detail view">
    <tbody>
    <tr>
      <th width="150">User Name:</th>
      <td><%= @user.user_name %></td>
    </tr>
    <tr>
      <th>Full Name:</th>
      <td>   <%= "#{@user.first_name}"+" #{@user.last_name}" %></td>
    </tr>
    <tr>
      <th>Spouse First Name:</th>
      <td>   <%= @user.spouse_first_name %></td>
    </tr>
    <tr>
      <th>Email:</th>
      <td><%= @user.email %></td>
    </tr>

    <tr>
      <th>Club Status:</th>
      <td><%= @user.status %></td>
    </tr>

    <tr>
      <th>Leadership:</th>
      <td><%= @user.leadership %></td>
    </tr>
    <tr>
      <th>Officers:</th>
      <td><%= @user.officers %></td>
    </tr>

    <tr>
      <th>Newsletter Editor:</th>
      <td><%= @user.newsletter_editor %></td>
    </tr>
    <tr>
      <th>Webmaster:</th>
      <td><%= @user.webmaster %></td>
    </tr>
    <tr>
      <th>Signature:</th>
      <td><%= @user.signature %></td>
    </tr>

    <tr>
      <th>Address:</th>
      <td> <%= "#{@user.house_number}"+" #{@user.street}"+", #{@user.city}" +", #{@user.state}"+", #{@user.postal_code}" %></td>
    </tr>
    <tr>
      <th>Phone:</th>
      <td> <%= @user.phone %></td>
    </tr>
    <tr>
      <th>Birthday:</th>
      <td>
        <%= @user.birthday.strftime("%d %B") %></td>
    </tr>
    <tr>
      <th>Biography:</th>
      <td><%= @user.biography %></td>
    </tr>
    <tr>
      <th>Pledge year:</th>
      <td><%= @user.member_as_of %></td>
    </tr>
    <tr>
      <th>SignIn Count:</th>
      <td><%= @user.sign_in_count %></td>
    </tr>
    <tr>
      <th>Current SignIn At:</th>
      <td><%= @user.current_sign_in_at %></td>
    </tr>
    <tr>
      <th>Last SignIn At:</th>
      <td><%= @user.last_sign_in_at %></td>
    </tr>
    <tr>
      <th>Current SignIn IP:</th>
      <td><%= @user.current_sign_in_ip %></td>
    </tr>
    <tr>
      <th>Last SignIn IP:</th>
      <td><%= @user.last_sign_in_ip %></td>
    </tr>
    <tr>
      <th>Failed Attempts:</th>
      <td><%= @user.failed_attempts %></td>
    </tr>
    <tr>
      <th>Locked At:</th>
      <td><%= @user.locked_at %></td>
    </tr>
    <tr>
      <th>Confirmed At:</th>
      <td><%= @user.confirmed_at %></td>
    </tr>

    <tr>
      <th>Confirmation Sent At:</th>
      <td><%= @user.confirmation_sent_at %></td>
    </tr>
    <tr>
      <th>Avatar Updated At:</th>
      <td><%= @user.avatar_updated_at %></td>
    </tr>

    </tbody>
  </table>
</div>


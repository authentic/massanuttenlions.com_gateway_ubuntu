<% provide :page_title, "Delete User: #{@user.user_name}" %>
<ul class="nav nav-pills">
  <li>
    <%= link_to({:controller => 'access', :action => 'menu'}, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Admin Home
    <% end %>
  </li>
  <li>
    <%= link_to(root_path, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Site Home
    <% end %>
  </li>
  <li>
    <%= link_to({:controller => 'admin', :action => 'list'}, :class => "btn-primary") do %>
        <i class="icon-th-list icon-white"></i> User List
    <% end %>
  </li>
</ul>
<div class="form-board">
  <%= simple_form_for @user, :url => {:action => 'destroy', :id => @user.id} do |f| %>
      <div class="well">
        <fieldset>
          <legend><%= "Delete User '#{@user.user_name}'" %></legend>
          <p class="alert alert-error">Are you sure you want to permanently delete user "<%= @user.user_name %>"?</p>

          <div class="form-actions">
            <%= f.submit "Delete User", :class => 'btn btn-large' %>
            <%= link_to 'Cancel', {:controller => 'admin', :action => 'list'}, :class => 'btn btn-large' %>
          </div>
        </fieldset>
      </div>
  <% end %>
</div>
</div>



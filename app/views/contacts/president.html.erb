<% provide :page_title, "Club President" %>
<% unless @club.nil? %>

    <div class="page-header">
      <h1>Club President <%= @club.current_year %></h1></div>
    <ul class="thumbnails">
      <li>
        <div class="thumbnail center leadership">
          <%= image_tag @president.avatar.url(:medium) %>
          <h6><%= @president.signature %></h6>
        </div>
      </li>
    </ul>
    <h3>Mailing Address:</h3>
    <address>
      <strong><%= @club.name %></strong><br>
      <%= @club.mailing_address %>
    </address>
    <address><strong>Phone:</strong> <%= @club.phone %> <br>
      <strong>Email Address: </strong> <a href="mailto:#" target="_blank"><%= @club.president_email %></a></address>

<% else %>
    <p class="alert alert-error">No data available!</p>
<% end %>
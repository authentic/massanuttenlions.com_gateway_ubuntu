<% provide :page_title, @page.name %>

<div class='page-header'>
  <h1><span id='page_name' data-mercury='full'>
      <%= @page.name.html_safe %>
    </span></h1>
</div>



<div class="edit-menu">
  <% if user_signed_in? %>
      <% if current_user.has_role? :admin %>
          <%= link_to("/editor" + request.path, :id => "edit_link", :data => {:save_url => mercury_update_page_path(@page)}, :class => "btn btn-mini btn-primary") do %>
              <i class="icon-pencil"></i> Quick Edit
<% end %>


          <%= link_to({:controller => 'pages', :action => 'edit', :id => @page.id, :subject_id => @page.subject_id}, :class => "btn btn-mini btn-primary") do %>
              <i class="icon-pencil"></i> Edit Page
          <% end %>
          <hr>
      <% end %>
  <% end %>
</div>
<div id='page_content' data-mercury='full'>
  <% case @page.content_type
       when 'HTML' %>
      <%= @page.content.html_safe %>
  <% when 'text' %>
      <p><%= @page.content %></p>
  <% end %></div>








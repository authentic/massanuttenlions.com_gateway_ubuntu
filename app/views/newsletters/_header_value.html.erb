<%= header_value do %>
    <table class='table newsletter'>
      <tbody>
      <tr>
        <td width="70%"><h1 class='newsletter line_height'> Mountain Lion &nbsp;&mdash; <%= @newsletter.period.strftime("%B %Y") %></h1>

          <h5 class="line_height"><strong><%= @club.name %></strong> <br> <%= @club.mailing_address %> </h5>

          <p class="line_height"><small>
            <% if @president %>
                <em><strong>President:</strong></em> <%= @president.signature %>
                <a href='mailto:#' target='_blank'> <%= @club.president_email %></a><br>
            <% end %>
            <% if @secretary %>
                <em><strong>Secretary:</strong></em> <%= @secretary.signature %>
                <a href='mailto:#' target='_blank'> <%= @club.secretary_email %></a><br>
            <% end %>
            <% if @treasurer %>
                <em><strong> Treasurer:</strong></em> <%= @treasurer.signature %>
                <a href='mailto:#' target='_blank'> <%= @club.newsletter_editor_email %></a><br>
            <% end %>
            <% if @photographer %>
                <em><strong>Photographer:</strong></em> <%= @photographer.signature %>
                <a href='mailto:#' target='_blank'> <%= @club.photographer_email %></a><br>
            <% end %>
            </small></p>
        </td>
        <td width="30%">
          <img alt='Mountain Lion' src='http://www.massanuttenlions.org/ckeditor_assets/pictures/82/content_logonewsletter1.jpg?1354567578' class='img-circle'>
        </td>
      </tr>
      </tbody>
    </table>
    <hr class="hrLion">
<% end %>

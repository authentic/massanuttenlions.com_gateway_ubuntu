<% provide :page_title, "Show Club Information" %>
<div class="row-fluid">
  <ul class="nav nav-pills">
    <li>
      <%= link_to({:controller => 'access', :action => 'menu'}, :class => "btn-primary") do %>
          <i class="icon-home  icon-white"></i> Admin Home
      <% end %>
    </li>
    <li>
      <%= link_to(root_path, :class => "btn-primary") do %>
          <i class="icon-home icon-white"></i> Site Home
      <% end %>
    </li>
  </ul>
  <div>
    <h2> <%= "Club Information".upcase %></h2>
    <ul class="nav nav-pills">
      <li>
        <%= link_to({:action => 'new'}, :class => "btn-info") do %>
            <i class="icon-plus"></i> Add New Club Information
        <% end %>    </li>
    </ul>
    <% @clubs.each do |club| %>
    <table class="table table-striped table-bordered table-condensed" summary="Club list">
      <tbody>

          <tr>
            <th>Current year:</th>
            <td><strong><%= club.current_year %></strong></td>
          </tr>

          <tr>

            <th width="180">Club Name:</th>
            <td><%= club.name %></td>
          </tr>
          <tr>
            <th>Meeting Address:</th>
            <td><%= club.meeting_address %></td>
          </tr>
          <tr>
            <th>Mailing Address:</th>
            <td><%= club.mailing_address %></td>
          </tr>
          <tr>
            <th>City:</th>
            <td><%= club.city %></td>
          </tr>
          <tr>
            <th>Postal Code:</th>
            <td><%= club.postal_code %></td>
          </tr>
          <tr>
            <th>State/Region:</th>
            <td><%= club.state %></td>
          </tr>
          <tr>
            <th>Club Phone:</th>
            <td><%= club.phone %></td>
          </tr>
          <tr>
            <th>Club Email:</th>
            <td><%= club.email %></td>
          </tr>
          <tr>
            <th>President Email:</th>
            <td><%= club.president_email %></td>
          </tr>
          <tr>
            <th>Webmaster Email:</th>
            <td><%= club.webmaster_email %></td>
          </tr>
          <tr>
            <th>Newsletter Editor Email:</th>
            <td><%= club.newsletter_editor_email %></td>
          </tr>
          <tr>
            <th>Secretary Email:</th>
            <td><%= club.secretary_email %></td>
          </tr>
          <tr>
            <th>Board of Directors Photo:</th>
            <td> <%= image_tag club.avatar.url(:medium) %></td>
          </tr>
          <tr>
            <th>Actions:</th>
            <td> <%= link_to({:action => 'edit', :id => club.id}, :class => "btn btn-mini btn-primary") do %>
                  <i class="icon-pencil"></i> Edit
              <% end %>
              <%= link_to({:action => 'delete', :id => club.id}, :class => "btn btn-mini btn-danger") do %>
                  <i class="icon-trash"></i> Delete
              <% end %>


            </td>
          </tr>

      </tbody>

    </table>
    <hr><% end %>
  </div>

</div>
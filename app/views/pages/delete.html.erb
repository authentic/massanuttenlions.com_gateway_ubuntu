<% provide :page_title, "Delete Page: #{@page.name}" %>
<ul class="nav nav-pills">
  <li>
    <%= link_to({:controller => 'access', :action => 'menu'}, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Admin Home
    <% end %>
  </li>
  <li>
    <%= link_to(root_path, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Site Home
    <% end %>
  </li>
  <li>
    <%= link_to subjects_path, :class => "btn-primary" do %>
        <i class="icon-th-list icon-white"></i> Subjects List
    <% end %>
  </li>
  <li>
    <%= link_to({:controller => 'pages', :action => 'list', :subject_id => @page.subject_id}, :class => "btn-primary") do %>
        <i class="icon-th-list icon-white"></i> Pages List
    <% end %>
  </li>
</ul>
<div>
  <div class="form-board">
    <%= simple_form_for @page, :url => {:action => 'destroy', :id => @page.id, :subject_id => @subject.id} do |f| %>
        <div class="well">
          <fieldset>
            <legend><%= "Delete Page '#{@page.name}'" %></legend>
            <p class="alert alert-error">Are you sure you want to permanently delete page "<%= @page.name %>"?</p>

            <div class="form-actions">
              <%= f.submit "Delete Page", :class => 'btn btn-large' %>
              <%= link_to({:controller => 'pages', :action => 'list', :subject_id => @page.subject_id}, :class => 'btn btn-large') do %>
                  Cancel
              <% end %>
            </div>
          </fieldset>
        </div>
    <% end %></div>
</div>
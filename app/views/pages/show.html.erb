<% provide :page_title, "Show Page: #{@page.name}" %>
<ul class="nav nav-pills">
  <li>
    <%= link_to({:controller => 'access', :action => 'menu'}, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Admin Home
    <% end %>
  </li>
  <li>
    <%= link_to(root_path, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Site Home
    <% end %>
  </li>
  <li>
    <%= link_to(subjects_path, :class => 'btn-primary') do %>
        <i class="icon-th-list icon-white"></i> Subjects List
    <% end %>
  </li>
  <li>
    <%= link_to({:controller => 'pages', :action => 'list', :subject_id => @page.subject_id}, :class => "btn-primary") do %>
        <i class="icon-th-list icon-white"></i> Pages List
    <% end %>
  </li>
</ul>
<div>
  <h2><%= "Page Detail View - '#{@page.name}'".upcase %></h2>
  <table class="table table-striped table-bordered table-condensed" summary="Page detail view">
    <tbody>
    <tr>
      <th width="130">Page Name:</th>
      <td><%= @page.name %></td>
    </tr>
    <tr>
      <th>Position:</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Visible:</th>
      <td><%= @page.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Permalink:</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th>Subject Name</th>
      <td><%= @page.subject.name %></td>
    </tr>
    <tr>
      <th>Created:</th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th>Updated:</th>
      <td><%= @page.updated_at %></td>
    </tr>
    </tbody>
  </table>
</div>

